<div class="row">
        <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Update Category
            </header>
            {{#each category}}
            <div class="panel-body">
                <form class="form-horizontal bucket-form" method="POST" action="/updatecategory/{{this.cateid}}">
                    <div class="form-group">
                        <label class="col-sm-3 control-label">Category Name</label>
                        <div class="col-sm-6">
                            <input type="text" class="form-control" name="catename" value="{{this.cate_name}}"> 
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">Category ID</label>
                        <div class="col-sm-6">
                            <input type="text" class="form-control" name="cateid" value="{{this.cateid}}">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">Date</label>
                        <div class="col-sm-6">
                            <input type="date" class="form-control" name="catedate" value="{{this.date}}">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label"></label>
                        <div class="col-sm-6">
                            <button type="submit" class="btn btn-success">Submit</button>
                        </div>
                    </div>
                    
                </form>
            </div>
            {{/each}}
        </section>
    </div>
</div>  