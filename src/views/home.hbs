<div class="mt-4">
    <table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">ID</th>
      <th scope="col">Product Name</th>
      <th scope="col">Category</th>
      <th scope="col">Price</th>
      <th scope="col">Descriptions</th>
    </tr>
  </thead>
  <tbody>
          {{#each product}}
    <tr>
      <th scope="row">{{sum @index 1}}</th>
      <td>{{this.id}}</td>
      <td>{{this.product_name}}</td>
      <td>{{this.category}}</td>
      <td>{{this.price}}</td>
      <td>{{this.descriptions}}</td>
    </tr>
        {{/each}}
  </tbody>
    </table>
</div>